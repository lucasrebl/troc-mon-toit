{% extends 'base.html.twig' %}

{% block title %}My Bookings - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <h1 class="mb-4">My Bookings</h1>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4>{{ app.user.firstName }} {{ app.user.lastName }}</h4>
                    <p class="text-muted">{{ app.user.email }}</p>
                </div>
            </div>
            
            <div class="list-group mb-4">
                <a href="{{ path('app_user_profile') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-user me-2"></i> Profile
                </a>
                <a href="{{ path('app_user_bookings') }}" class="list-group-item list-group-item-action active">
                    <i class="fas fa-calendar-check me-2"></i> My Bookings
                </a>
                <a href="{{ path('app_user_favorites') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-heart me-2"></i> My Favorites
                    <span class="badge bg-primary rounded-pill float-end">{{ app.user.favorites.count }}</span>
                </a>
                <a href="{{ path('app_user_reviews') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-star me-2"></i> My Reviews
                    <span class="badge bg-primary rounded-pill float-end">{{ app.user.reviews.count }}</span>
                </a>
            </div>
        </div>
        
        <div class="col-md-9">
            {% if completedBookingsToReview|length > 0 %}
                <div class="alert alert-primary mb-4">
                    <i class="fas fa-info-circle me-2"></i> You have {{ completedBookingsToReview|length }} {{ completedBookingsToReview|length > 1 ? 'stays' : 'stay' }} to review.
                </div>
                
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Stays to Review</h4>
                    </div>
                    <div class="card-body">
                        {% for booking in completedBookingsToReview %}
                            <div class="row mb-3 pb-3 border-bottom">
                                <div class="col-md-3">
                                    {% if booking.property.imageFilename %}
                                        <img src="{{ asset('uploads/properties/' ~ booking.property.imageFilename) }}" alt="{{ booking.property.name }}" class="img-fluid rounded">
                                    {% else %}
                                        <img src="https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="{{ booking.property.name }}" class="img-fluid rounded">
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <h5>{{ booking.property.name }}</h5>
                                    <p class="text-muted mb-1">{{ booking.startDate|date('M d, Y') }} - {{ booking.endDate|date('M d, Y') }}</p>
                                    <p>Total: €{{ booking.totalPrice|number_format(2, '.', ',') }}</p>
                                </div>
                                <div class="col-md-3 d-flex align-items-center justify-content-end">
                                    <a href="{{ path('app_review_new', {'id': booking.id}) }}" class="btn btn-outline-primary">
                                        <i class="fas fa-star me-1"></i> Leave Review
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
            
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">All Bookings</h4>
                    
                    <div class="btn-group" role="group">
                        <button type="button" class="btn btn-outline-primary active" id="all-btn">All</button>
                        <button type="button" class="btn btn-outline-primary" id="upcoming-btn">Upcoming</button>
                        <button type="button" class="btn btn-outline-primary" id="past-btn">Past</button>
                    </div>
                </div>
                <div class="card-body">
                    {% if bookings|length > 0 %}
                        {% set today = date() %}
                        {% for booking in bookings %}
                            {% set isUpcoming = booking.startDate > today %}
                            {% set isPast = booking.endDate < today %}
                            
                            <div class="booking-item row mb-4 pb-4 border-bottom {% if isUpcoming %}upcoming{% elseif isPast %}past{% else %}current{% endif %}">
                                <div class="col-md-3 mb-3 mb-md-0">
                                    {% if booking.property.imageFilename %}
                                        <img src="{{ asset('uploads/properties/' ~ booking.property.imageFilename) }}" alt="{{ booking.property.name }}" class="img-fluid rounded">
                                    {% else %}
                                        <img src="https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="{{ booking.property.name }}" class="img-fluid rounded">
                                    {% endif %}
                                </div>
                                <div class="col-md-6">
                                    <h5>{{ booking.property.name }}</h5>
                                    <p><i class="fas fa-map-marker-alt me-1"></i> {{ booking.property.city }}</p>
                                    
                                    <div class="d-flex align-items-center mb-2">
                                        <div class="me-3">
                                            <i class="fas fa-calendar-alt me-1 text-primary"></i> 
                                            {{ booking.startDate|date('M d, Y') }}
                                        </div>
                                        <i class="fas fa-arrow-right text-muted mx-1"></i>
                                        <div class="ms-3">
                                            <i class="fas fa-calendar-alt me-1 text-primary"></i> 
                                            {{ booking.endDate|date('M d, Y') }}
                                        </div>
                                    </div>
                                    
                                    <p class="mb-1">
                                        <i class="fas fa-tag me-1 text-primary"></i> 
                                        Total: €{{ booking.totalPrice|number_format(2, '.', ',') }}
                                    </p>
                                    
                                    <p class="mb-0">
                                        <span class="badge {% if isUpcoming %}bg-success{% elseif isPast %}bg-secondary{% else %}bg-primary{% endif %}">
                                            {% if isUpcoming %}Upcoming{% elseif isPast %}Completed{% else %}Current Stay{% endif %}
                                        </span>
                                    </p>
                                </div>
                                <div class="col-md-3 d-flex flex-column justify-content-center">
                                    <a href="{{ path('app_booking_show', {'id': booking.id}) }}" class="btn btn-outline-primary mb-2">
                                        <i class="fas fa-info-circle me-1"></i> Details
                                    </a>
                                    
                                    {% if isUpcoming %}
                                        <a href="{{ path('app_booking_cancel', {'id': booking.id}) }}" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to cancel this booking?')">
                                            <i class="fas fa-times-circle me-1"></i> Cancel
                                        </a>
                                    {% elseif isPast and not booking.hasReviewed %}
                                        <a href="{{ path('app_review_new', {'id': booking.id}) }}" class="btn btn-outline-primary">
                                            <i class="fas fa-star me-1"></i> Review
                                        </a>
                                    {% elseif isPast and booking.hasReviewed %}
                                        <button class="btn btn-outline-secondary" disabled>
                                            <i class="fas fa-check-circle me-1"></i> Reviewed
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5>No bookings yet</h5>
                            <p>Start exploring properties to book your first stay.</p>
                            <a href="{{ path('app_home') }}" class="btn btn-primary">Explore Properties</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const allBtn = document.getElementById('all-btn');
    const upcomingBtn = document.getElementById('upcoming-btn');
    const pastBtn = document.getElementById('past-btn');
    const bookingItems = document.querySelectorAll('.booking-item');
    
    allBtn.addEventListener('click', function() {
        setActiveButton(allBtn);
        bookingItems.forEach(item => {
            item.style.display = 'flex';
        });
    });
    
    upcomingBtn.addEventListener('click', function() {
        setActiveButton(upcomingBtn);
        bookingItems.forEach(item => {
            if (item.classList.contains('upcoming')) {
                item.style.display = 'flex';
            } else {
                item.style.display = 'none';
            }
        });
    });
    
    pastBtn.addEventListener('click', function() {
        setActiveButton(pastBtn);
        bookingItems.forEach(item => {
            if (item.classList.contains('past')) {
                item.style.display = 'flex';
            } else {
                item.style.display = 'none';
            }
        });
    });
    
    function setActiveButton(activeBtn) {
        [allBtn, upcomingBtn, pastBtn].forEach(btn => {
            btn.classList.remove('active');
        });
        activeBtn.classList.add('active');
    }
});
</script>
{% endblock %}