{% extends 'base.html.twig' %}

{% block title %}My Profile - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <h1 class="mb-4">My Profile</h1>
    
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4>{{ user.firstName }} {{ user.lastName }}</h4>
                    <p class="text-muted">{{ user.email }}</p>
                </div>
            </div>
            
            <div class="list-group mb-4">
                <a href="{{ path('app_user_profile') }}" class="list-group-item list-group-item-action active">
                    <i class="fas fa-user me-2"></i> Profile
                </a>
                <a href="{{ path('app_user_bookings') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-calendar-check me-2"></i> My Bookings
                </a>
                <a href="{{ path('app_user_favorites') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-heart me-2"></i> My Favorites
                    <span class="badge bg-primary rounded-pill float-end">{{ user.favorites.count }}</span>
                </a>
                <a href="{{ path('app_user_reviews') }}" class="list-group-item list-group-item-action">
                    <i class="fas fa-star me-2"></i> My Reviews
                    <span class="badge bg-primary rounded-pill float-end">{{ user.reviews.count }}</span>
                </a>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title mb-4">Edit Profile</h3>
                    
                    {{ form_start(form) }}
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                {{ form_label(form.firstName) }}
                                {{ form_widget(form.firstName) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.lastName) }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.phoneNumber) }}
                            {{ form_widget(form.phoneNumber) }}
                            {{ form_errors(form.phoneNumber) }}
                        </div>
                        
                        <h4 class="mt-4 mb-3">Change Password</h4>
                        <p class="text-muted mb-3">Leave blank if you don't want to change your password</p>
                        
                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                {{ form_label(form.plainPassword.first) }}
                                {{ form_widget(form.plainPassword.first) }}
                                {{ form_errors(form.plainPassword.first) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.plainPassword.second) }}
                                {{ form_widget(form.plainPassword.second) }}
                                {{ form_errors(form.plainPassword.second) }}
                            </div>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Save Changes
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
            
            <div class="card mt-4">
                <div class="card-body">
                    <h3 class="card-title mb-4">Account Statistics</h3>
                    
                    <div class="row text-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="p-3 border rounded">
                                <i class="fas fa-calendar-check fa-2x text-primary mb-2"></i>
                                <h4>{{ user.bookings.count }}</h4>
                                <p class="text-muted mb-0">Bookings</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <div class="p-3 border rounded">
                                <i class="fas fa-heart fa-2x text-accent mb-2"></i>
                                <h4>{{ user.favorites.count }}</h4>
                                <p class="text-muted mb-0">Favorites</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 border rounded">
                                <i class="fas fa-star fa-2x text-warning mb-2"></i>
                                <h4>{{ user.reviews.count }}</h4>
                                <p class="text-muted mb-0">Reviews</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}