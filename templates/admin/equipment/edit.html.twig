{% extends 'base.html.twig' %}

{% block title %}Edit Equipment - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Equipment</h1>
        <a href="{{ path('app_admin_equipment') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.description) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.icon) }}
                    {{ form_widget(form.icon) }}
                    {{ form_help(form.icon) }}
                    {{ form_errors(form.icon) }}
                    {% if equipment.icon %}
                        <div class="mt-2">
                            <i class="fas {{ equipment.icon }} fa-2x"></i>
                            <small class="text-muted ms-2">Current icon preview</small>
                        </div>
                    {% endif %}
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Update
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}