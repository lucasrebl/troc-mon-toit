{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Admin Dashboard</h1>
        <div class="btn-group">
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary">
                <i class="fas fa-home me-1"></i> Back to Site
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Properties</h6>
                            <h2 class="mb-0">{{ render(controller('App\\Controller\\Admin\\AdminController::getPropertyCount')) }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-home fa-2x opacity-75"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_properties') }}" class="text-white stretched-link">Manage Properties</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Users</h6>
                            <h2 class="mb-0">{{ render(controller('App\\Controller\\Admin\\AdminController::getUserCount')) }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-users fa-2x opacity-75"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_users') }}" class="text-white stretched-link">Manage Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Reviews</h6>
                            <h2 class="mb-0">{{ render(controller('App\\Controller\\Admin\\AdminController::getReviewCount')) }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-star fa-2x opacity-75"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_reviews') }}" class="text-white stretched-link">Manage Reviews</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-1">Property Types</h6>
                            <h2 class="mb-0">{{ render(controller('App\\Controller\\Admin\\AdminController::getPropertyTypeCount')) }}</h2>
                        </div>
                        <div>
                            <i class="fas fa-building fa-2x opacity-75"></i>
                        </div>
                    </div>
                    <a href="{{ path('app_admin_property_types') }}" class="text-white stretched-link">Manage Types</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="{{ path('app_admin_properties_new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle me-2 text-success"></i> Add New Property
                        </a>
                        <a href="{{ path('app_admin_property_types_new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle me-2 text-success"></i> Add New Property Type
                        </a>
                        <a href="{{ path('app_admin_equipment_new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle me-2 text-success"></i> Add New Equipment
                        </a>
                        <a href="{{ path('app_admin_services_new') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle me-2 text-success"></i> Add New Service
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Management</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="{{ path('app_admin_equipment') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-tools me-2 text-primary"></i> Manage Equipment
                            <span class="badge bg-primary rounded-pill float-end">{{ render(controller('App\\Controller\\Admin\\AdminController::getEquipmentCount')) }}</span>
                        </a>
                        <a href="{{ path('app_admin_services') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-concierge-bell me-2 text-primary"></i> Manage Services
                            <span class="badge bg-primary rounded-pill float-end">{{ render(controller('App\\Controller\\Admin\\AdminController::getServiceCount')) }}</span>
                        </a>
                        <a href="{{ path('app_admin_reviews') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-star me-2 text-primary"></i> Manage Reviews
                            <span class="badge bg-primary rounded-pill float-end">{{ render(controller('App\\Controller\\Admin\\AdminController::getReviewCount')) }}</span>
                        </a>
                        <a href="{{ path('app_admin_users') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-users me-2 text-primary"></i> Manage Users
                            <span class="badge bg-primary rounded-pill float-end">{{ render(controller('App\\Controller\\Admin\\AdminController::getUserCount')) }}</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Latest Properties</h5>
                    <a href="{{ path('app_admin_properties') }}" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>City</th>
                                    <th>Price/Night</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for property in render(controller('App\\Controller\\Admin\\AdminController::getLatestProperties')) %}
                                    <tr>
                                        <td>{{ property.name }}</td>
                                        <td>{{ property.propertyType.name }}</td>
                                        <td>{{ property.city }}</td>
                                        <td>â‚¬{{ property.pricePerNight|number_format(2, '.', ',') }}</td>
                                        <td>
                                            <a href="{{ path('app_admin_properties_edit', {'id': property.id}) }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}