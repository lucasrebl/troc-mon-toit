{% extends 'base.html.twig' %}

{% block title %}Review Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Review Management</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Property</th>
                            <th>User</th>
                            <th>Rating</th>
                            <th>Comment</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for review in reviews %}
                            <tr>
                                <td>{{ review.property.name }}</td>
                                <td>{{ review.user.firstName }} {{ review.user.lastName }}</td>
                                <td>
                                    <div class="rating-stars">
                                        {% for i in 1..5 %}
                                            {% if i <= review.rating %}
                                                <i class="fas fa-star text-warning"></i>
                                            {% else %}
                                                <i class="far fa-star"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </td>
                                <td>{{ review.comment|slice(0, 50) }}{% if review.comment|length > 50 %}...{% endif %}</td>
                                <td>{{ review.createdAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_admin_reviews_edit', {'id': review.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_admin_reviews_delete', {'id': review.id}) }}" 
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this review?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No reviews found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}