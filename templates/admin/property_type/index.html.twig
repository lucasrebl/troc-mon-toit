{% extends 'base.html.twig' %}

{% block title %}Property Type Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Property Type Management</h1>
        <a href="{{ path('app_admin_property_types_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Add Property Type
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Properties</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for propertyType in propertyTypes %}
                            <tr>
                                <td>{{ propertyType.name }}</td>
                                <td>{{ propertyType.description }}</td>
                                <td>
                                    <span class="badge bg-primary">{{ propertyType.properties.count }} properties</span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_admin_property_types_edit', {'id': propertyType.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_admin_property_types_delete', {'id': propertyType.id}) }}" 
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this property type?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No property types found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}