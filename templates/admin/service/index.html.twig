{% extends 'base.html.twig' %}

{% block title %}Service Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Service Management</h1>
        <a href="{{ path('app_admin_services_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Add Service
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Icon</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for service in services %}
                            <tr>
                                <td>{{ service.name }}</td>
                                <td>{{ service.description }}</td>
                                <td><i class="fas {{ service.icon }}"></i></td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_admin_services_edit', {'id': service.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_admin_services_delete', {'id': service.id}) }}" 
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this service?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center">No services found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}