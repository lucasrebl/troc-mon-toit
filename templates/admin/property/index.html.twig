{% extends 'base.html.twig' %}

{% block title %}Property Management - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Property Management</h1>
        <a href="{{ path('app_admin_properties_new') }}" class="btn btn-primary">
            <i class="fas fa-plus-circle me-1"></i> Add Property
        </a>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form action="{{ path('app_admin_properties') }}" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" name="search" class="form-control" placeholder="Search properties..." value="{{ searchTerm }}">
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-1"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>City</th>
                            <th>Price/Night</th>
                            <th>Equipment</th>
                            <th>Services</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for property in properties %}
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        {% if property.imageFilename %}
                                            <img src="{{ asset('uploads/properties/' ~ property.imageFilename) }}" alt="{{ property.name }}" class="rounded me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                        {% else %}
                                            <img src="https://images.pexels.com/photos/186077/pexels-photo-186077.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="{{ property.name }}" class="rounded me-2" style="width: 50px; height: 50px; object-fit: cover;">
                                        {% endif %}
                                        <div>
                                            <strong>{{ property.name }}</strong>
                                            {% if property.averageRating %}
                                                <div class="rating-stars small">
                                                    {% for i in 1..5 %}
                                                        {% if i <= property.averageRating %}
                                                            <i class="fas fa-star"></i>
                                                        {% else %}
                                                            <i class="far fa-star"></i>
                                                        {% endif %}
                                                    {% endfor %}
                                                    <small class="text-muted">({{ property.reviews.count }})</small>
                                                </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-primary">{{ property.propertyType.name }}</span></td>
                                <td>{{ property.city }}</td>
                                <td>â‚¬{{ property.pricePerNight|number_format(2, '.', ',') }}</td>
                                <td>
                                    <small>
                                        {{ property.equipment|length }} items
                                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" data-bs-placement="top" 
                                           title="{{ property.equipment|map(e => e.name)|join(', ') }}"></i>
                                    </small>
                                </td>
                                <td>
                                    <small>
                                        {{ property.services|length }} services
                                        <i class="fas fa-info-circle" data-bs-toggle="tooltip" data-bs-placement="top" 
                                           title="{{ property.services|map(s => s.name)|join(', ') }}"></i>
                                    </small>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn btn-sm btn-outline-primary" target="_blank">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_admin_properties_edit', {'id': property.id}) }}" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="{{ path('app_admin_properties_delete', {'id': property.id}) }}" 
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this property?')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center">No properties found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize tooltips
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });
});
</script>
{% endblock %}