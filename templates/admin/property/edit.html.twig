{% extends 'base.html.twig' %}

{% block title %}Edit Property - {{ parent() }}{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Edit Property</h1>
        <a href="{{ path('app_admin_properties') }}" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_label(form.pricePerNight) }}
                                {{ form_widget(form.pricePerNight) }}
                                {{ form_errors(form.pricePerNight) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.propertyType) }}
                                {{ form_widget(form.propertyType) }}
                                {{ form_errors(form.propertyType) }}
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                {{ form_label(form.city) }}
                                {{ form_widget(form.city) }}
                                {{ form_errors(form.city) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_label(form.address) }}
                                {{ form_widget(form.address) }}
                                {{ form_errors(form.address) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header">
                                <h5 class="mb-0">Equipment</h5>
                            </div>
                            <div class="card-body">
                                <div class="max-h-60 overflow-y-auto border border-gray-200 rounded p-2">
                                    {% for child in form.equipment %}
                                        <div class="flex items-center p-2 rounded hover:bg-gray-100 transition-colors mb-2 last:mb-0">
                                            {{ form_widget(child, {'attr': {'class': 'flex-shrink-0 mr-2'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'cursor-pointer select-none m-0'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.equipment) }}
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">Services</h5>
                            </div>
                            <div class="card-body">
                                <div class="max-h-60 overflow-y-auto border border-gray-200 rounded p-2">
                                    {% for child in form.services %}
                                        <div class="flex items-center p-2 rounded hover:bg-gray-100 transition-colors mb-2 last:mb-0">
                                            {{ form_widget(child, {'attr': {'class': 'flex-shrink-0 mr-2'}}) }}
                                            {{ form_label(child, null, {'label_attr': {'class': 'cursor-pointer select-none m-0'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.services) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Update Property
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{# Les styles pour les équipements et services sont maintenant gérés avec Tailwind #}
{% endblock %}